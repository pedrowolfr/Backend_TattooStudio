{
  "name": "inkon",
  "version": "1.0.0",
  "main": "dist/server.js",

  "scripts": {
    "build": "npx tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --files src/server.ts",
    "db:seed": "ts-node src/database/seeders/DatabaseSeeder.ts",
    "db:migrate": "npx typeorm-ts-node-commonjs migration:run -d ./src/database/data-source.ts",
    "db:drop": "npx typeorm-ts-node-commonjs schema:drop -d ./src/database/data-source.ts",
    "db:refresh": "npm run db:drop && npm run db:migrate"

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "bcrypt": "^5.1.1",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.7.0",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.19"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.7",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
